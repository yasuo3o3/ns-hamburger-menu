<?xml version="1.0"?>
<ruleset name="NS Hamburger Menu">
    <description>PHPCS configuration for NS Hamburger Menu plugin</description>

    <!-- Files to check -->
    <file>.</file>

    <!-- Exclude paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/blocks/*</exclude-pattern>
    <exclude-pattern>*/templates/*</exclude-pattern>

    <!-- Arguments -->
    <arg value="sp"/>
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>

    <!-- WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow filename without class prefix -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        
        <!-- Allow direct database queries (we're not using any) -->
        <exclude name="WordPress.DB.DirectDatabaseQuery"/>
        
        <!-- Allow file includes without nonce verification -->
        <exclude name="WordPress.Security.NonceVerification.Missing"/>
    </rule>

    <!-- Minimum PHP version -->
    <config name="minimum_supported_wp_version" value="6.5"/>
    <config name="testVersion" value="7.4-"/>

    <!-- WordPress specific rules -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="ns-hamburger-menu"/>
            </property>
        </properties>
    </rule>

    <!-- Class prefixes -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="NSHM"/>
                <element value="nshm"/>
                <element value="NS_Hamburger"/>
                <element value="ns_hamburger"/>
            </property>
        </properties>
    </rule>
</ruleset>